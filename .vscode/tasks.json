{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "testsuite name=\"Mocha Tests\"",
                    "endsPattern": "/testsuite"
                },
                "pattern": {
                    "regexp": "(test/test_.*?.ts):(\\d+):(\\d+)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        }
    ]
}